# Environment Variables Template
# ==============================
# Copy this file to .env.local and fill in the values
#
# IMPORTANT: NEXT_PUBLIC_* variables are inlined at BUILD TIME.
# In production (Coolify), set these in Build Variables, then rebuild.

# ===================================
# App Configuration
# ===================================

NODE_ENV=development

# Public site URL (used for absolute URLs, OAuth callbacks)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=My Website

# ===================================
# Database (Supabase PostgreSQL)
# ===================================

# PostgreSQL connection string
# Format: postgres://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=

# ===================================
# Supabase (Authentication & Storage)
# ===================================

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anon (public) key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ===================================
# External API (Optional)
# ===================================

# If using an external API
# NEXT_PUBLIC_API_URL=https://api.example.com
# API_KEY=

# For server-to-server calls (bypasses external proxy)
# API_INTERNAL_URL=http://internal-hostname:3000

# ===================================
# Email (Optional - for production)
# ===================================

# SMTP Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=noreply@example.com
# SMTP_FROM_NAME=My Website

# ===================================
# Logging & Monitoring
# ===================================

# Enable debug logs in production (default: false)
ENABLE_DEBUG_LOGS=false

# Service name for structured logs (used by Grafana Loki)
LOG_SERVICE_NAME=website-template

# ===================================
# Feature Flags (Optional)
# ===================================

# Enable specific features
# FEATURE_DARK_MODE=true
# FEATURE_ANALYTICS=true

# ===================================
# Analytics (Optional)
# ===================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Plausible Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=example.com
